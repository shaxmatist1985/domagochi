#Моя зверюшка
#Виртуальный питомец, о котором пользователь может заботиться
class Critter(object):
    '''Виртуальный питомец'''
    def __init__(self, name, hunger = 0,boredom = 0):
        self.name = name
        self.hunger = hunger
        self.boredom = boredom
    def __pass_time(self):
        self.hunger +=1
        self.boredom +=1
    @property
    def mood(self):
        unhappiness = self.hunger + self.boredom
        if unhappiness < 5:
            m = 'прекрасно'
        elif 5<= unhappiness <= 10:
            m = 'неплохо'
        elif 11<= unhappiness <= 15:
            m = 'не сказать чтобы хорошо'
        else:
            m = 'ужасно'
        return m
    def talk(self):
        print('Меня зовут', self.name, ', и сейчас чувствую себя', self.mood, 'сейчас\n')
        self.__pass_time()
    def eat_full(self, food = 5):
        print('Мрр... Спасибо было сытно !')
        self.hunger -= food
        if self.hunger < 0:
            self.hunger = 0
        self.__pass_time()
    def eat_little(self, food = 3):
        print('Мрр... Спасибо перекусил немного !')
        self.hunger -= food
        if self.hunger < 0:
            self.hunger = 0
        self.__pass_time()
    def play_good(self, fun = 5):
        print('Уиии!'отлично поиграли)
        self.boredom -= fun
        if self. boredom < 0:
            self.boredom = 0
        self.__pass_time()
    def play_little(self, fun = 3):
        print('Уиии!'поиграли немного)
        self.boredom -= fun
        if self. boredom < 0:
            self.boredom = 0
        self.__pass_time()
def main():
    crit_name = input('Как вы назовете свою зверюшку?')
    crit = Critter(crit_name)
    choice = None
    while choice != '0':
        print \
            ('''
            Моя зверюшка
            0 - Выйти
            1 - Узнать о самочувствии зверюшки
            2 - Покормить зверюшку плотно
            3 - Покормить немного зверюшку
            4 - Долго играть со зверюшкой
            5 - Чуток поиграть со зверюшкой
            ''')
        choice = input('Ваш выбор: ')
        print()
        #выход
        if choice == '0':
            print('До свидания.')
        #беседа со зверюшкой
        elif choice == '1':
            crit.talk()
        # плотное кормление зверюшки
        elif choice == '2':
            crit.eat_full()
         # немного кормим зверюшку
        elif choice == '3':
            crit.eat_little()
        #долгая игра со зверюшкой
        elif choice == '4':
            crit.play_good()
        #короткая игра со зверюшкой
        elif choice == '5':
            crit.play_little()
        # непонятный пользовательский ввод
        else:
            print('Извините, в меню нет пункта', choice)
main()
input('\n\nНажмите Enter, чтобы выйти.')

